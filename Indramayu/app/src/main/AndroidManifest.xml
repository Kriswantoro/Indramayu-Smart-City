<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kriswantoro.indramayu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="m">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.akun.TentangISCActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.tempat.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".ui.beranda.panggilan_darurat.PanggilanDaruratActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.tempat.list_tempat.RumahSakitActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.tempat.list_tempat.KantorPolisiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.tempat.list_tempat.WisataActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.tempat.list_tempat.IbadahActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.akun.edit_akun.EditAkunAktivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.saran.buat_saran.TambahSaranActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ui.beranda.buat_pengaduan.PengaduanActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".verifikasi.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".verifikasi.OTPActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".verifikasi.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".intro.IntroActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".intro.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>