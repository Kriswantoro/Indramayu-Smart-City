<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/btnMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cv_judul_saran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/cv_tanggal_saran"
                android:text="Judul Saran"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cv_tanggal_saran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="17-0-2020" />

            <TextView
                android:id="@+id/cv_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_toStartOf="@+id/cv_dinas"
                android:layout_below="@+id/cv_judul_saran"
                android:layout_marginTop="4dp"
                android:text="Deskripsi" />

            <TextView
                android:id="@+id/cv_dinas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_deskripsi"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Dinas Pendidikan" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>