<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Saran"
            android:id="@+id/txt_saran"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:cardCornerRadius="5dp"
            android:elevation="8dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/cv_saran">

            <EditText
                android:id="@+id/judul_saran"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:inputType="text"
                android:textColor="#000"
                android:paddingStart="16dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Instansi"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_cv_kategori_instansi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <Spinner
                android:id="@+id/spin_kategori_instansi"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Dinas Pendidikan"
                android:textStyle="bold"
                android:textColor="#000"
                android:paddingHorizontal="8dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_deskripsi"
            android:text="Deskripsi"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:elevation="8dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/cv_deskripsi">

            <EditText
                android:id="@+id/deskripsi"
                android:layout_below="@+id/cv_deskripsi"
                android:inputType="textMultiLine"
                android:textColor="#000"
                android:minLines="3"
                android:gravity="top|left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />

        </androidx.cardview.widget.CardView>

</LinearLayout>
        <Button
            android:id="@+id/btn_kirim_saran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:background="@drawable/bgbutton2"
            android:text="Kirim"
            android:textColor="#fff"
            android:textSize="16sp" />

</RelativeLayout>