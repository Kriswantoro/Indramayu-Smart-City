<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".ui.akun.AkunFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/btn_isc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/info" />


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/foto_profil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_bg_home3"
            app:civ_border_color="@color/blue"
            app:civ_border_width="2dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit_profil"
            style="@style/FabStyle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="70dp"
            android:onClick="pickProfileImage"
            app:fabSize="mini"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_profil"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:text="Edit Profile" />

        <TextView
            android:id="@+id/nama_pengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edt"
            android:gravity="center"
            android:text="Contoh"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nomor_pengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_pengguna"
            android:gravity="center"
            android:text="+628" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_b_diproses"
            android:layout_width="100dp"
            android:layout_height="82dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/nomor_pengguna"
            android:layout_toStartOf="@+id/cv_s_diproses"
            android:background="@color/blue"
            android:elevation="8dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:padding="8dp"
                android:text="Belum Diproses"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/riwayat_belum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="60"
                android:textColor="@color/colorPrimaryDark" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_s_diproses"
            android:layout_width="100dp"
            android:layout_height="82dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/nomor_pengguna"
            android:elevation="8dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:padding="8dp"
                android:text="Sedang Diproses"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/riwayat_sedang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="12"
                android:textColor="@color/colorPrimaryDark" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_selesai"
            android:layout_width="100dp"
            android:layout_height="82dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/nomor_pengguna"
            android:layout_toEndOf="@+id/cv_s_diproses"
            android:elevation="8dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:padding="8dp"
                android:text="Selesai"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/riwayat_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="12"
                android:textColor="@color/colorPrimaryDark" />

        </androidx.cardview.widget.CardView>

        <!--        <TextView-->
        <!--            android:id="@+id/tentang_apk"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/nomor_pengguna"-->
        <!--            android:layout_margin="30dp"-->
        <!--            android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"-->
        <!--            android:drawablePadding="8dp"-->
        <!--            android:text="Tentang Aplikasi"-->
        <!--            android:textColor="#000"-->
        <!--            android:textStyle="bold" />-->
    </RelativeLayout>


    <Button
        android:id="@+id/btn_keluar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bgbutton"
        android:text="Keluar"
        android:textColor="@color/white" />

</RelativeLayout>